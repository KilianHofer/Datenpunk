<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.datenpunk.NewProjectController">
   <center>
      <VBox>
         <children>
            <Label text="Name:" />
            <TextField fx:id="nameField" onAction="#onCreate" promptText="Project Name">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Host:" />
            <TextField fx:id="hostField" onAction="#onCreate" promptText="Host IP" text="localhost">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Directory:" />
            <HBox>
               <children>
                  <TextField fx:id="pathField" onAction="#onCreate" promptText="Path" />
                  <Button mnemonicParsing="false" onAction="#onSelect" text="Select" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="25.0" left="50.0" right="50.0" top="50.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <Button mnemonicParsing="false" onAction="#onCancel" text="Cancel" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button mnemonicParsing="false" onAction="#onCreate" text="Create" BorderPane.alignment="CENTER" />
         </right>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </BorderPane.margin>
      </BorderPane>
   </bottom>
</BorderPane>

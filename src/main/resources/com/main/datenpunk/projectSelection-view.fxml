<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.datenpunk.ProjectSelectionController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#onNew" text="New Project" />
                  <MenuItem mnemonicParsing="false" onAction="#onOpenFromFile" text="Open" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#onClose" text="Close" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Settings">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#onDeleteSavedPasswords" text="Delete saved passwprds" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <BorderPane>
               <top>
                  <BorderPane BorderPane.alignment="CENTER">
                     <left>
                        <VBox BorderPane.alignment="CENTER">
                           <children>
                              <HBox>
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#onOpen" text="Open">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                    </Button>
                                    <Button mnemonicParsing="false" onAction="#onNew" text="New" />
                                 </children>
                              </HBox>
                              <TextField fx:id="searchBar" onKeyTyped="#onSearch" promptText="Search">
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                        </VBox>
                     </left>
                     <right>
                        <Button mnemonicParsing="false" onAction="#onDelete" text="Delete" BorderPane.alignment="TOP_CENTER" />
                     </right>
                     <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </BorderPane.margin>
                  </BorderPane>
               </top>
               <center>
                  <TableView fx:id="projectTable" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="nameColumn" minWidth="50.0" prefWidth="150.0" text="Name" />
                      <TableColumn fx:id="lastVisitedColumn" minWidth="50.0" prefWidth="150.0" text="Last Visited" />
                        <TableColumn fx:id="createdAtColumn" prefWidth="150.0" text="Created At" />
                        <TableColumn fx:id="hostColumn" prefWidth="125.0" text="Host" />
                        <TableColumn fx:id="locationColumn" prefWidth="300.0" text="Location" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </BorderPane.margin>
                  </TableView>
               </center>
            </BorderPane>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
